{% extends "BpaulinUpfitBundle::layout.html.twig" %}

{% block content -%}
    <form class="form-horizontal" action="{{ action }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">
                    <i class="icon-ok"></i>
                    {% trans %}Edit{% endtrans %}
                </button>
            </div>
        </div>
    </form>
{% endblock %}
