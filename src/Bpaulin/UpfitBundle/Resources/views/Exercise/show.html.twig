{% extends "BpaulinUpfitBundle:Crud:show.html.twig" %}
{% import "BpaulinUpfitBundle::macro.html.twig" as macros %}
{%
    set breadcrumbs = {
        ('Admin'|trans) : {
            'route': path('upfit_admin'),
            'icon': 'briefcase',
        },
        ('Exercises'|trans) : {
            'route': path('admin_exercise'),
            'icon': 'list',
        },
        (entity.name) : {
            'route': path('admin_exercise_show', { 'id': entity.id }),
            'icon': 'edit',
        },
    }
%}
{%
    set actions = {
        'Edit' : {
            'route': path('admin_exercise_edit', { 'id': entity.id }),
            'icon': 'edit',
            'class': 'primary'
        },
        'Delete' : {
            'route': path('admin_exercise_delete', { 'id': entity.id }),
            'icon': 'minus',
            'class': 'danger'
        },
    }
%}
{%
    set fields = {
        'id' : entity.id,
        'name' : entity.name,
        'intensities' : macros.intensitiesList(entity),
    }
%}

{% block h1 %}{% trans %}Exercise{% endtrans %} <small>{{ entity.name }}</small>{% endblock %}
