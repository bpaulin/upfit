{% extends "BpaulinUpfitBundle:Crud:show.html.twig" %}
{%
    set breadcrumbs = {
        'Admin' : {
            'route': path('upfit_admin'),
            'icon': 'briefcase',
        },
        'Exercises' : {
            'route': path('admin_exercise'),
            'icon': 'list',
        },
        (entity.name) : {
            'route': path('admin_exercise_show', { 'id': entity.id }),
            'icon': 'edit',
        },
    }
%}
{%
    set actions = {
        'Edit' : {
            'route': path('admin_exercise_edit', { 'id': entity.id }),
            'icon': 'edit',
            'class': 'primary'
        },
        'Delete' : {
            'route': path('admin_exercise_delete', { 'id': entity.id }),
            'icon': 'minus',
            'class': 'danger'
        },
    }
%}
{%
    set fields = {
        'Id' : entity.id,
        'Name' : entity.name,
    }
%}

{% block h1 %}Exercise <small>{{ entity.name }}</small>{% endblock %}
