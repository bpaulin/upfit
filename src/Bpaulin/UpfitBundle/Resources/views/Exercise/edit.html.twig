{% extends "BpaulinUpfitBundle::layout.html.twig" %}
{% set actions = {
        'Back to the list' : path('admin_exercise'),
        'Show' : path('admin_exercise_show', { 'id': entity.id }),
    }
%}

{% block h1 %}Exercise <small>{{ entity.name }}</small>{% endblock %}

{% block content -%}
    <form action="{{ path('admin_exercise_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
{% endblock %}
