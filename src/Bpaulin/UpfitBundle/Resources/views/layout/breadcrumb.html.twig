<ul class="breadcrumb">
    {% if breadcrumbs is defined %}
        <li>
            <a href="{{path('upfit_index')}}"><i class="icon-home"></i> <span class="breadcrumb-label"></span></a>
        </li>
        {% for label, route in breadcrumbs %}
            {% if loop.last %}
                <li class="active">
                    <span class="breadcrumb-label">
                        {{ label }}
                    </span>
                </li>
            {% else %}
                <li>
                    <a href="{{ route.route }}">
                        {% if route.icon is defined %}
                            <i class="icon-{{ route.icon }}"></i>
                            <span class="breadcrumb-label">{{ label }}</span>
                        {% else %}
                            <span class="breadcrumb-label">{{ label }}</span>
                        {% endif %}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    {% else %}
        <li class="active">
            <i class="icon-home"></i> <span class="breadcrumb-label"></span>
        </li>
    {% endif %}
</ul>
