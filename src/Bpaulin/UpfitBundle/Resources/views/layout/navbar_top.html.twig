<div class="navbar navbar-static-top">
  <div class="container">

    <!-- .navbar-toggle is used as the toggle for collapsed navbar content -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
     <span class="icon-bar"></span>
     <span class="icon-bar"></span>
     <span class="icon-bar"></span>
  </button>

  <a class="navbar-brand" href="{{path('upfit_index')}}">
    Upfit
  </a>

  <div class="nav-collapse collapse navbar-responsive-collapse">
    <ul class="nav navbar-nav">
      <li>
        <a href="https://github.com/bpaulin/upfit">
          <i class="icon-github-sign icon-large"></i>
            Github
        </a>
      </li>
    </ul>

    <ul class="nav navbar-nav pull-right" id="connection-area">
      <li>
        <a data-toggle="dropdown" href="#">{{ app.request.locale|capitalize }}</a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
          {% for locale in ['fr', 'en', 'es', 'de'] %}
            {% if app.request.locale != locale %}
              <li>
                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': locale})) }}">
                  {{ locale|capitalize }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </li>
      {% if app.user.username is defined %}
        <li class="navbar-text">
          {{ app.user.username }}
        </li>
        <li>
          <a href="{{ path('fos_user_security_logout') }}">
            <i class="icon-signout"></i>
              <span class=""> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</span>
            </a>
        </li>
      {% else %}
        <li>
          <a href="{{ path('fos_user_security_login') }}">
            <i class="icon-signin"></i>
              <span class=""> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </div><!--/.nav-collapse -->
</div>
</div>
