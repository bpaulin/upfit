<div id="notification-area">
{% for level in ['error', 'info', 'success'] %}
    {% for flashMessage in app.session.flashbag.get(level) %}
        <div class="alert alert-{{ level }}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endfor %}
</div>
