<div id="message-area">
    {% if sessions %}
        <div class="alert">
            {% trans %}Unfinished sessions{% endtrans %}
            <ul>
            {% for session in sessions %}
                <li class="unfinished-sessions">
                    <a href="{{ path('member_session_show', { 'id': session.id }) }}">{{ session.name }}</a>
                </li>
            {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>
